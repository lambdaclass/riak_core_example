[
 {riak_core,
  [
   {ring_state_dir, "./data/ring"},
   {web_port, {{web_port}}},
   {handoff_port, {{handoff_port}}},
   %% Platform-specific installation paths (substituted by rebar)
   {platform_bin_dir, "./bin"},
   {platform_data_dir, "./data"},
   {platform_etc_dir, "./etc"},
   {platform_lib_dir, "./lib"},
   {platform_log_dir, "./log"},
   {schema_dirs, ["lib/rc_example-0.1.0/priv"]}
  ]},
 {sasl, [{errlog_type, error}]},
 {lager, [ {colored, true},
            {error_logger_hwm, 150},
            {extra_sinks, [
                {mylog_lager_event, [
                    {async_threshold, 500},
                    {async_threshold_window, 50},
                    {handlers, [{lager_console_backend,[
                        {level,debug},
                        {formatter_config,
                            [time,color," [",sev,"] ",pid,{function,[" {",module,":",function,"#",line,"} "],[" "]},message,"\e[0m\n"]}
                        ]}
                    ]}
                ]}
            ]},
          {handlers, [
              {lager_console_backend, [{level, info}
		      ]},
	          {lager_file_backend, [{file, "log/error.log"}, {level, error}]},
	          {lager_file_backend, [{file, "log/console.log"}, {level, debug}]}]}
	      ]}
].
